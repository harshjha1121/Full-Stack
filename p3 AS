import express from "express";
import jwt from "jsonwebtoken";
import bodyParser from "body-parser";

const app = express();
app.use(bodyParser.json());

// Secret key for JWT (store securely in production)
const SECRET_KEY = "mysecretkey";

// ðŸ§‘â€ðŸ’¼ Mock Users (with roles)
const users = [
  { username: "admin", password: "admin123", role: "Admin" },
  { username: "mod", password: "mod123", role: "Moderator" },
  { username: "user", password: "user123", role: "User" },
];

// ðŸŸ¢ LOGIN â€” Returns JWT with role
app.post("/login", (req, res) => {
  const { username, password } = req.body;
  const foundUser = users.find(
    (u) => u.username === username && u.password === password
  );

  if (!foundUser) {
    return res.status(401).json({ message: "Invalid username or password" });
  }

  // Generate JWT with role
  const token = jwt.sign(
    { username: foundUser.username, role: foundUser.role },
    SECRET_KEY,
    { expiresIn: "1h" }
  );

  res.json({
    message: "Login successful",
    token,
    role: foundUser.role,
  });
});

// ðŸ›¡ï¸ Middleware: Verify JWT
function verifyToken(req, res, next) {
  const authHeader = req.headers["authorization"];
  const token = authHeader && authHeader.split(" ")[1];

  if (!token) {
    return res.status(403).json({ message: "Access denied. Token missing." });
  }

  jwt.verify(token, SECRET_KEY, (err, decoded) => {
    if (err) {
      return res.status(403).json({ message: "Invalid or expired token." });
    }
    req.user = decoded;
    next();
  });
}

// ðŸ”’ Middleware: Role-based Authorization
function authorizeRoles(...allowedRoles) {
  return (req, res, next) => {
    if (!allowedRoles.includes(req.user.role)) {
      return res.status(403).json({ message: "Access denied: insufficient role." });
    }
    next();
  };
}

// ðŸ§­ ROUTES

app.get("/", (req, res) => {
  res.send("Welcome to Role-Based Access Control (RBAC) Example!");
});

// ðŸ‘‘ Admin-only route
app.get("/admin", verifyToken, authorizeRoles("Admin"), (req, res) => {
  res.json({ message: "Welcome Admin! You can manage the system." });
});

// ðŸ§° Moderator-only route
app.get("/moderator", verifyToken, authorizeRoles("Admin", "Moderator"), (req, res) => {
  res.json({ message: "Welcome Moderator! You can manage user posts." });
});

// ðŸ‘¤ User route (accessible by all authenticated users)
app.get("/profile", verifyToken, authorizeRoles("Admin", "Moderator", "User"), (req, res) => {
  res.json({ message: `Hello ${req.user.username}, this is your profile.` });
});

const PORT = 5000;
app.listen(PORT, () => console.log(`âœ… Server running on port ${PORT}`));
